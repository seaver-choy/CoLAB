<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/chat_menu_item_card"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="6dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="2dp">
        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/chat_menu_item_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                app:riv_corner_radius="50dip"
                android:src="@drawable/profile_chino"/>
            <TextView
                android:id="@+id/chat_menu_item_name"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/chat_menu_item_photo"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:text="Chino Tapales"/>
            <TextView
                android:id="@+id/chat_menu_item_message"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/chat_menu_item_photo"
                android:layout_below="@+id/chat_menu_item_name"
                android:textSize="13sp"
                android:text="Hey, What's up?"/>
            <TextView
                android:id="@+id/chat_menu_item_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:text="10:00 PM"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>